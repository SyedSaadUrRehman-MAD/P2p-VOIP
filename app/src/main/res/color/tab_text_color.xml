<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="MissingDefaultResource">

    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:state_selected="false" android:color="@color/black_transparent" />

    <item android:state_selected="true" android:color="@color/black_txt" />
    <item android:state_pressed="true" android:color="@color/black_txt" />
    <item android:state_pressed="false" android:color="@color/black_transparent" />

    <item android:color="@color/solid_white" />
</selector>