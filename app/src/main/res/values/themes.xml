<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Online" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/pm_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/lightGrayBG</item>
        <item name="colorOnSecondary">@color/solid_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Online.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Online.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Online.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DialogCustomTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">80%</item>
    </style>
    <style name="DialogCustomThemeDark" parent="DialogCustomTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:colorAccent">@color/solid_white</item>
        <item name="android:textColorPrimary">@color/solid_white</item>
        <item name="android:textColorTertiary">@color/mview_text_color</item>
        <item name="android:textColorSecondary">@color/mview_text_color_inverse</item>
    </style>
</resources>